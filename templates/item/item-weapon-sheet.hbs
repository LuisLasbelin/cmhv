<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
      <div class="grid grid-2col">
        <div class="resource">
          <label class="resource-label">{{localize 'CMHV.ItemWeight'}}</label>
          <input type="text" name="data.weight" value="{{data.weight}}" data-dtype="Number" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize 'CMHV.ItemValue'}}</label>
          <input type="text" name="data.value" value="{{data.value}}" data-dtype="Number" />
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize 'CMHV.Description'}}</a>
    <a class="item" data-tab="attributes">{{localize 'CMHV.Attributes'}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the
      rollData prop. --}}
      {{editor content=data.description target="data.description" rollData=rollData button=true owner=owner
      editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
      <div class="resource">
        <label class="resource-label">{{ localize 'CMHV.Precission' }}</label>
        <input class="cmhv-input-text" type="text" name="data.precission.value" value="{{data.precission.value}}" data-dtype="Number" />
      </div>
      <div class="resource">
        <label class="resource-label">{{ localize 'CMHV.DamageRoll' }}</label>
        <input class="cmhv-input-text" type="text" name="data.damage.value" value="{{data.damage.value}}" data-dtype="String" />
      </div>
      <div class="resource">
        <label class="resource-label">{{ localize 'CMHV.Range' }}</label>
        <select name="data.range.type">
          {{#select data.range.type}}
              <option value="melee">{{ localize 'CMHV.Melee' }}</option>
              <option value="ranged">{{ localize 'CMHV.Ranged' }}</option>
          {{/select}}
        </select>

        <label class="resource-label">{{ localize 'CMHV.Distance' }}</label>
        <input class="cmhv-input-text" type="text" name="data.range.value" value="{{data.range.value}}" data-dtype="Number" />
      </div>
      <div class="resource">
        <label class="resource-label">{{localize 'CMHV.DamageType'}}</label>
        <select name="data.damageType">
          {{#select data.damageType}}
            {{#each damageTypes as |name damageType|}}
              <option value="{{ damageType }}">{{ localize name }}</option>
            {{/each}}
          {{/select}}
        </select>
      </div>
    </div>
  </section>
</form>