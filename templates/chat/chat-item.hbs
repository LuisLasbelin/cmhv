<div class="cmhv chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}">
    <div class="align-left">
        <img class="cmhv-chat-image" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="cmhv-chat-title">{{item.name}}</div>
    </div>
    {{#if description}}
    <div class="cmhv-inline-result-gold">
        <div class="cmhv-section-title-gold">{{ localize "CMHV.Description"}}</div>
        {{{ description }}}
    </div>
    {{/if}}
    <div class="cmhv-inline-result-gold">
        <p class="item-formula">{{localize 'CMHV.ItemValue'}}: {{value}}c</p>
        <p class="item-formula">{{localize 'CMHV.ItemQuantity'}}: {{quantity}}</p>
        <p class="item-formula">{{localize 'CMHV.ItemWeight'}}: {{weight}}kg</p>
    </div>
</div>