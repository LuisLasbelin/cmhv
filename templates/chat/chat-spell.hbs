<div class="cmhv chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}">
    <div class="align-left">
        <div class="cmhv-item-label">{{localize 'CMHV.Spell'}}</div>
        <img class="cmhv-chat-image" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="cmhv-chat-title">{{item.name}}</div>
    </div>
    {{#if description}}
    <div class="cmhv-inline-result-red">
        <div class="cmhv-section-title-red">{{ localize "CMHV.Description"}}</div>
        {{{ description }}}
    </div>
    {{/if}}
    <div class="cmhv-inline-result-red">
        <div class="cmhv-section-title-red">{{ localize "CMHV.Spell"}}</div>
        <p class="item-formula">{{localize 'CMHV.SpellCircle'}}: {{localize spellCircle}}</p>
        <p class="item-formula">{{localize 'CMHV.SpellDomain'}}: {{localize spellDomain}}</p>
        <p class="item-formula">{{localize 'CMHV.Level'}}: {{level}}</p>
        <p class="item-formula">{{localize 'CMHV.Kimiya'}}: {{item.data.cost}}</p>
        <p class="item-formula">{{localize 'CMHV.Range'}}: {{item.data.spellRange}}m</p>
    </div>
    <div class="cmhv-inline-result-red">
        <div class="cmhv-section-title-red">{{ localize "CMHV.Precission"}}</div>
        <p class="item-formula">Total: <b>{{rollPrecission.total}} > {{precissionObjective}}</b></p>
        <p class="item-formula">Formula: d20 + {{ localize 'CMHV.AttributeWill'}}</p>
        <p class="item-formula">Result: {{rollPrecission.result}}</p>
    </div>
    <div class="cmhv-inline-result-red">
        <div class="cmhv-section-title-red">{{ localize "CMHV.SpellDamage"}}</div>
        <p class="item-formula">Total: <b>{{rollDamage.total}}</b></p>
        <p class="item-formula">Formula: {{item.data.spellDamage}}</p>
        <p class="item-formula">Result: {{rollDamage.result}}</p>
    </div>
</div>