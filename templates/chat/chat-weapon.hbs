<div class="cmhv chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}">
    <div class="align-left">
        <div class="cmhv-item-label">{{localize 'CMHV.Weapon'}}</div>
        <img class="cmhv-chat-image" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="cmhv-chat-title">{{item.name}}</div>
    </div>
    {{#if description}}
    <div class="cmhv-inline-result">
        <div class="cmhv-section-title">{{ localize "CMHV.Description"}}</div>
        {{{ description }}}
    </div>
    {{/if}}
    <div class="cmhv-inline-result">
        <div class="cmhv-section-title">{{ localize "CMHV.Weapon"}}</div>
        <p class="item-formula">{{localize 'CMHV.Range'}}: {{localize rangeType}}</p>
        {{#if rangeValue}}
        <p class="item-formula">{{localize 'CMHV.Distance'}}: {{rangeValue}}</p>
        {{/if}}
        <p class="item-formula">{{localize 'CMHV.DamageType'}}: {{localize damageType}}</p>
    </div>
    <div class="cmhv-inline-result">
        <div class="cmhv-section-title">{{ localize "CMHV.Precission"}}</div>
        <p class="item-formula">Total: <b>{{rollPrecission.total}}</b></p>
        <p class="item-formula">Formula: {{rollPrecissionFormula}}</p>
        <p class="item-formula">Result: {{rollPrecission.result}}</p>
    </div>
    <div class="cmhv-inline-result">
        <div class="cmhv-section-title">{{ localize "CMHV.Damage"}}</div>
        <p class="item-formula">Total: <b>{{rollDamage.total}}</b></p>
        <p class="item-formula">Formula: {{rollDamageFormula}}</p>
        <p class="item-formula">Result: {{rollDamage.result}}</p>
    </div>
</div>